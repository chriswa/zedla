{
  "name": "zedla",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm && npx -y check-node-version --node \">=22\"",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "codegen": "npx ts-codegen build src",
    "typecheck": "pnpm codegen && tsc --noEmit",
    "lint": "pnpm codegen && eslint .",
    "lint:fix": "pnpm codegen && eslint . --fix",
    "format": "pnpm codegen && eslint . --fix",
    "test": "pnpm codegen && vitest --run",
    "test:watch": "vitest",
    "test:ci": "vitest --run --coverage",
    "check": "pnpm codegen && tsc --noEmit && eslint . --fix && vitest --run"
  },
  "devDependencies": {
    "@chriswa/ts-config": "^0.0.6",
    "@swc/core": "^1.13.5",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "typescript": "~5.8.3",
    "unplugin-swc": "^1.5.7",
    "vite": "^7.1.9",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@chriswa/ts-codegen": "^1.4.0",
    "keycode-js": "^3.1.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0"
  }
}
