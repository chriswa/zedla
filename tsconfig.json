{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* decorator metadata for tsyringe */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["reflect-metadata"],
    "useDefineForClassFields": false,

    /* extra stuff from chatgpt */
    "isolatedModules": true /* Prevents surprises between tsc --noEmit and the Vite build */,
    "noUncheckedIndexedAccess": true /* arr[5] => number | undefined */,
    "exactOptionalPropertyTypes": true /* Treats a?: T as “property may be missing” (not “present and maybe undefined”). */,
    "noPropertyAccessFromIndexSignature": true /* prevents accidental dot-typos by forcing bracket access for dynamic keys */,
    "useUnknownInCatchVariables": true,
    "noImplicitReturns": true,

    // added for eventBus, but doesn't seem necessary
    // "strictFunctionTypes": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
